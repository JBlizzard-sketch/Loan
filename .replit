modules = ["nodejs-20", "python-3.11", "web", "bash"]
[agent]
expertMode = true
integrations = ["python_openai:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "glibcLocales", "libiconv", "libxcrypt", "openssl", "pkg-config", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Kechita Platform"

[[workflows.workflow]]
name = "Kechita Platform"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start_all.sh"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 36425
externalPort = 3000

[[ports]]
localPort = 37863
externalPort = 3003

[[ports]]
localPort = 39309
externalPort = 3001

[[ports]]
localPort = 44921
externalPort = 3002

[deployment]
deploymentTarget = "autoscale"
run = ["python", "backend/serve_production.py"]
build = ["bash", "-c", "cd frontend && npm install && npm run build"]
